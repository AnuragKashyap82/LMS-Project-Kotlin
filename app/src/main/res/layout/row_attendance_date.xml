<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/studentNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bfjkbfjkwa"
        android:fontFamily="@font/seg_ui_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/studentRegNoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nflkbnflkbgnlk"
        android:layout_below="@id/studentNameTv"
        android:fontFamily="@font/seg_ui_semibold"
        android:textColor="@color/Gray01"
        android:layout_marginStart="8dp"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/presentTv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/shape_rect02"
        android:backgroundTint="#45E21A"
        android:fontFamily="@font/seg_ui_semibold"
        android:includeFontPadding="false"
        android:text="P"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/absentTv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_rect02"
        android:backgroundTint="#E80734"
        android:fontFamily="@font/seg_ui_semibold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="A"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:visibility="visible" />


</RelativeLayout>